<h1>Job Search Dashboard</h1>

	<form action="/search" method="post">
	  <br>

	  <input type="text" name="job" placeholder="job">

    <input type="text" name="location" placeholder="location">

    <input type="submit" name="search" value="Search">

    <br>

    <% if !@csv.nil? %>

    	<% @csv.each do |x| %>

	    	<p><%= x.company %></p>
  	  	<p><%= x.title   %></p>

   	  <% end %>

   	<% end %>

	</form>


















